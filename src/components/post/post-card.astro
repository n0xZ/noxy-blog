---
import type { CollectionEntry } from 'astro:content'

type Props = {
	posts: CollectionEntry<'post'>[]
}
const { posts } = Astro.props as Props
---

<article class="flex flex-col justify-center    gap-4 w-full  mt-6 ">
	{
		posts.map((post) => (
			<a
				href={`/post/${post.slug}`}
				class="h-40 w-full pl-9 rounded-lg border-l-4 border-rose-300 dark:border-rose-800  decoration-none  "
			>
				<h2 class="text-2xl">{post.data.title}</h2>
				<time class="c-gray-400 dark:c-gray-600" datetime={post.data.pubDate}>{post.data.pubDate}</time>
			</a>
		))
	}
</article>
